<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="client.ChatController" >
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="messageVBox" spacing="5" />
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

    </ScrollPane>
    <HBox spacing="10">
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" promptText="Votre message..."/>
        <Button fx:id="sendButton" text="Envoyer" onAction="#sendMessage"/>
    </HBox>
</VBox>